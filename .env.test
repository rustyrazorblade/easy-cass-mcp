# Test environment configuration
# Copy this file to .env for local testing

# Cassandra connection settings
CASSANDRA_CONTACT_POINTS=localhost
# For multiple hosts use: CASSANDRA_CONTACT_POINTS=host1,host2,host3
# Or use CASSANDRA_HOST for single host (Docker-friendly):
# CASSANDRA_HOST=cassandra
CASSANDRA_PORT=9042
CASSANDRA_DATACENTER=datacenter1
# CASSANDRA_USERNAME=cassandra
# CASSANDRA_PASSWORD=cassandra

# Test-specific settings
CASSANDRA_TEST_KEYSPACE=mcp_integration_tests
# CASSANDRA_TEST_DATACENTER=dc1_test

# Whether to clean up test data after tests run
CLEANUP_TEST_DATA=false